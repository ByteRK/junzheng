<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="720dp">
    <GridLayout
        android:id="@+id/gridLayout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="4">
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_1"
            android:drawableTop="@mipmap/menu_next_01"
            android:text="系统设置"/>
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_2"
            android:drawableTop="@mipmap/menu_next_02"
            android:text="网络设置"/>
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_3"
            android:drawableTop="@mipmap/menu_next_03"
            android:text="报警参数设置"/>
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_4"
            android:drawableTop="@mipmap/menu_next_04"
            android:text="安全设置"/>
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_5"
            android:drawableTop="@mipmap/menu_next_05"
            android:text="邮箱设置"/>
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_6"
            android:drawableTop="@mipmap/menu_next_06"
            android:text="平台设置"/>
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_7"
            android:drawableTop="@mipmap/menu_next_07"
            android:text="短信设置"/>
        <TextView
            style="@style/grid_2"
            android:id="@+id/main2_func_8"
            android:drawableTop="@mipmap/menu_next_08"
            android:text="其它"/>
    </GridLayout>

    <ImageView
        android:id="@+id/nextPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/last_page"/>
</RelativeLayout>