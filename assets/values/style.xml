<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="grid">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">#88888888</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="grid_2">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:background">#88888888</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
    </style>

<!--    设置界面-->
    <style name="setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="background">@drawable/click_backgroud</item>
    </style>
    <style name="setting_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="setting_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:src">@mipmap/all_next_gary</item>
    </style>

<!--    场景 -->
    <style name="changjing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
    </style>
    <style name="changjing_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>